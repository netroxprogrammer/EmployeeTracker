<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="netroxtech.com.employeetracker.MainActivity">
    <Button
        android:id="@+id/regiserasManager_main_activity"
        android:text="Register as a Manager"
        android:textColor="#fff8f8f8"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshap"
        android:shadowColor="#A8A8A8"
      android:onClick="registerASManager"

        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_dialog_email" />
    <RelativeLayout
        android:layout_width="280dp"
        android:background="@drawable/loginbackgroung"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="400dp">

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="320dp"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:id="@+id/name"
                android:layout_marginTop="25dp"
                >
                <ImageView android:layout_width="18dp"
                    android:layout_gravity="center"
                    android:layout_height="18dp"

                    android:background="@drawable/username"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Name"
                    android:id="@+id/name_activity_main"
                    android:textSize="10dp"
                    android:layout_gravity="center_horizontal"


                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:id="@+id/password"
                android:layout_below="@+id/name"
                >
                <ImageView android:layout_width="15dp"
                    android:layout_gravity="center"
                    android:layout_height="18dp"
                    android:background="@drawable/passsword"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="password"
                    android:id="@+id/password_activity_main"
                    android:textSize="10dp"
                    android:layout_gravity="center_horizontal"


                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:id="@+id/employeeName"
                android:layout_below="@+id/password"
                >
                <ImageView android:layout_width="18dp"
                    android:layout_gravity="center"
                    android:layout_height="18dp"
                    android:background="@drawable/usernmae"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Employee Name"
                    android:textSize="10dp"
                    android:id="@+id/employeename_activity_main"
                    android:layout_gravity="center_horizontal"


                    />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:id="@+id/employeemobile"
                android:layout_below="@+id/employeeName"
                >
                <ImageView android:layout_width="18dp"
                    android:layout_gravity="center"
                    android:layout_height="18dp"
                    android:background="@drawable/mobile"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Employee Mobile"
                    android:textSize="10dp"
                    android:id="@+id/employeemobile_activity_main"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/login"
                android:text="login &amp; Add Employee "
                android:textColor="#FFFFFFFF"
                android:textSize="12sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loginbutton"
                android:shadowColor="#A8A8A8"

                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Existing Manager"
                android:textSize="18sp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            />
        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="162dp"
        android:layout_height="108dp"
        android:src="@drawable/profileimage"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal|top"


        />

</FrameLayout>
