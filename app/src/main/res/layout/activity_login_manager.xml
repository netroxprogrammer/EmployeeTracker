<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="netroxtech.com.employeetracker.MainActivity">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_dialog_email" />
    <!-- Center Design layout-->

    <Button
        android:id="@+id/regiserasManager_main_activity"
        android:text="Register as a Manager"
        android:textColor="#fff8f8f8"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshap"
        android:shadowColor="#A8A8A8"
        android:onClick="registerASManager"/>

    <RelativeLayout
        android:layout_width="340dp"
        android:background="@drawable/loginbackgroung"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_height="300dp">
        <!-- layout for Input -->
        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="200dp"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registeer As Manager"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:id="@+id/userName"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <ImageView android:layout_width="18dp"
                    android:layout_gravity="center"
                    android:layout_height="18dp"

                    android:background="@drawable/username"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.96"
                    android:hint="userName"
                    android:id="@+id/userName_activity_loginmanager"
                    android:textSize="10dp"
                    android:layout_gravity="center_horizontal"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:id="@+id/password"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/userName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <ImageView android:layout_width="15dp"
                    android:layout_gravity="center"
                    android:layout_height="18dp"
                    android:background="@drawable/passsword"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.96"
                    android:hint="password"
                    android:id="@+id/password_activity_loginmanager"
                    android:textSize="10dp"
                    android:layout_gravity="center_horizontal"


                    />
            </LinearLayout>

            <Button
                android:id="@+id/login"
                android:text="Login"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loginbutton"
                android:shadowColor="#A8A8A8"
                android:onClick="addManager"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <![CDATA[



            />

        ]]>
        </RelativeLayout>

        <ImageView
            android:layout_width="162dp"
            android:layout_height="108dp"
            android:src="@drawable/profileimage"
            android:layout_gravity="center_horizontal|top"


            android:layout_above="@+id/relativeLayout"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <!--  Circular  image in top-->

</FrameLayout>
