<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/loginbackgroung"
    tools:context="netroxtech.com.employeetracker.AdvanceSetting">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:text="@string/advanceSetting"
        android:background="@color/wallet_holo_blue_light"
        android:textStyle="bold"
        android:id="@+id/advacenSettingText"

/>


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/hostdetails"
    android:id="@+id/host_layout"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOST/FTP Address: "
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/activity_advanceSetting_IP"
        android:textSize="15dp"
        />
    <EditText
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/activity_setting_hostAddress"
        android:layout_toEndOf="@+id/activity_advanceSetting_IP"
        android:layout_toRightOf="@+id/activity_advanceSetting_IP"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/host_layout"
        android:id="@+id/port_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Port Address: "
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/activity_advanceSetting_port"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/activity_setting_portAddress"
            android:layout_toEndOf="@+id/activity_advanceSetting_port"
            android:layout_toRightOf="@+id/activity_advanceSetting_port"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/port_layout"
        android:id="@+id/userName_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name: "
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/activity_advanceSetting_uName"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/activity_setting_userName"
            android:layout_toEndOf="@+id/activity_advanceSetting_uName"
            android:layout_toRightOf="@+id/activity_advanceSetting_uName"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName_layout"
        android:id="@+id/password_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password: "
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/activity_advanceSetting_pass"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:id="@+id/activity_setting_password"
            android:layout_toEndOf="@+id/activity_advanceSetting_pass"
            android:layout_toRightOf="@+id/activity_advanceSetting_pass"
            />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOST/FTP login Details"
        android:layout_below="@id/advacenSettingText"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/hostdetails"
        android:textSize="18dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_marginTop="5dp"
        android:id="@+id/activity_setting_saveButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/password_layout"
        android:background="@drawable/loginbutton"

        />



</RelativeLayout>
