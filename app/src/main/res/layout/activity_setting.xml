<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="netroxtech.com.employeetracker.Setting"
    android:background="@drawable/loginbackgroung"

    >

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Call"
        android:id="@+id/activity_setting_callRecordong"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Logs"
        android:layout_below="@+id/activity_setting_callRecordong"
        android:id="@+id/activity_setting_callLogs"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS Logs"
        android:layout_below="@+id/activity_setting_callLogs"
        android:id="@+id/activity_setting_smsLog"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share via Email"
        android:id="@+id/activity_setting_shareemail"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_setting_smsLog"
        android:background="@drawable/buttonshap"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Example@gmail.com"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/activity_setting_sharetext"
        android:layout_below="@id/activity_setting_shareemail"

        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blackBackground"
        android:layout_below="@+id/activity_setting_sharetext"
        android:layout_marginTop="10dp"
        android:id="@+id/view2" />

    <Switch
         android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Auto Clean (After Share)"
        android:id="@+id/activity_setting_autoSwitch"
        android:layout_below="@+id/view2"
        android:layout_alignRight="@+id/activity_setting_shareemail"
        android:layout_alignEnd="@+id/activity_setting_shareemail" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_marginTop="5dp"
        android:id="@+id/activity_setting_saveButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_setting_autoSwitch"
        android:background="@drawable/loginbutton"
        android:onClick="SaveSettingButtton"
        />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Advance Setting"
        android:id="@+id/activity_setting_Advacne"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_setting_saveButton"
        android:background="@drawable/loginbutton"
        android:onClick="goToAdvanceSetting"
        />

</RelativeLayout>
