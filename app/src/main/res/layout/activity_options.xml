<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="netroxtech.com.employeetracker.Options">
    <Button
        android:id="@+id/callhistory"
        android:text="Call History"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton"
        android:shadowColor="#A8A8A8"
        android:onClick="callHistoryButton"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/playcall"
        android:layout_alignStart="@+id/playcall"
        android:layout_marginTop="49dp"
        android:layout_alignRight="@+id/playcall"
        android:layout_alignEnd="@+id/playcall" />
    <Button
        android:id="@+id/playcall"
        android:text="Play Call"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton"
        android:shadowColor="#A8A8A8"
        android:onClick="playCalls"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/callhistory"
        android:layout_alignLeft="@+id/presentlocation"
        android:layout_alignStart="@+id/presentlocation"
        android:layout_alignRight="@+id/presentlocation"
        android:layout_alignEnd="@+id/presentlocation" />
    <Button
        android:id="@+id/presentlocation"
        android:text="PresendLocation"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton"
        android:shadowColor="#A8A8A8"
        android:onClick="getLocation"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:text="Location History"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton"
        android:shadowColor="#A8A8A8"
        android:onClick="addManager"
        android:layout_below="@+id/presentlocation"
        android:layout_alignLeft="@+id/presentlocation"
        android:layout_alignStart="@+id/presentlocation"
        android:layout_marginTop="44dp" />

    <Button
        android:id="@+id/button2"
        android:text="Detail-Distance"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton"
        android:shadowColor="#A8A8A8"
        android:onClick="addManager"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/ic_setting"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
